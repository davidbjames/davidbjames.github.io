ext":": "},{"kind":"typeIdentifier","text":"Theme","preciseIdentifier":"s:2C35ThemeV"},{"kind":"text","text":"?, "},{"kind":"externalParam","text":"debug"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"ApiDebug","preciseIdentifier":"s:2C38ApiDebugV"},{"kind":"text","text":"?)"}],"title":"construct(theme:debug:)","roleHeading":"Instance Method","role":"symbol","symbolKind":"method","externalID":"s:2C310BackgroundC9construct5theme5debugyAA5ThemeVSg_AA8ApiDebugVSgtF","modules":[{"name":"C3"}]},"hierarchy":{"paths":[["doc:\/\/com.davidbjames.C3\/documentation\/C3","doc:\/\/com.davidbjames.C3\/documentation\/C3\/Background"]]},"references":{"doc://com.davidbjames.C3/documentation/C3/ApiDebug":{"role":"symbol","title":"ApiDebug","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"ApiDebug"}],"abstract":[{"type":"text","text":"Wrapper for outputting structured API debug information to the console."},{"type":"text","text":" "},{"type":"text","text":"NOT a general logging system."}],"identifier":"doc:\/\/com.davidbjames.C3\/documentation\/C3\/ApiDebug","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"ApiDebug"}],"url":"\/documentation\/c3\/apidebug"},"doc://com.davidbjames.C3/documentation/C3/Background/construct(theme:debug:)":{"role":"symbol","title":"construct(theme:debug:)","fragments":[{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"construct"},{"kind":"text","text":"("},{"kind":"externalParam","text":"theme"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"Theme","preciseIdentifier":"s:2C35ThemeV"},{"kind":"text","text":"?, "},{"kind":"externalParam","text":"debug"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"ApiDebug","preciseIdentifier":"s:2C38ApiDebugV"},{"kind":"text","text":"?)"}],"abstract":[{"type":"text","text":"Construct the current instance passing the appropriate"},{"type":"text","text":" "},{"type":"text","text":"theme to be used in construction. Alternatively, object"},{"type":"text","text":" "},{"type":"text","text":"can conform to ThemeAccessible to provide the theme."}],"identifier":"doc:\/\/com.davidbjames.C3\/documentation\/C3\/Background\/construct(theme:debug:)","kind":"symbol","type":"topic","url":"\/documentation\/c3\/background\/construct(theme:debug:)"},"doc://com.davidbjames.C3/documentation/C3":{"role":"collection","title":"C3","abstract":[],"identifier":"doc:\/\/com.davidbjames.C3\/documentation\/C3","kind":"symbol","type":"topic","url":"\/documentation\/c3"},"doc://com.davidbjames.C3/documentation/C3/Theme":{"role":"symbol","title":"Theme","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"Theme"}],"abstract":[{"type":"text","text":"A Theme is a collection of Styles that are"},{"type":"text","text":" "},{"type":"text","text":"tied to ids, tags or types represented via"},{"type":"text","text":" "},{"type":"text","text":"simple or complex Selectors. Each style contains"},{"type":"text","text":" "},{"type":"text","text":"a collection of StyleAttributes which can be"},{"type":"text","text":" "},{"type":"text","text":"applied to objects capable of receiving them."},{"type":"text","text":" "},{"type":"text","text":"Styles are similar to CSS for the web, in that"},{"type":"text","text":" "},{"type":"text","text":"they cascade in specificity with Styles specified"},{"type":"text","text":" "},{"type":"text","text":"later overriding previously applied styles."},{"type":"text","text":" "},{"type":"text","text":"The cascade is also grouped by creational styles,"},{"type":"text","text":" "},{"type":"text","text":"normal styles and control state styles, in that"},{"type":"text","text":" "},{"type":"text","text":"order of specificity."}],"identifier":"doc:\/\/com.davidbjames.C3\/documentation\/C3\/Theme","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"Theme"}],"url":"\/documentation\/c3\/theme"},"doc://com.davidbjames.C3/documentation/C3/Background":{"role":"symbol","title":"Background","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"Background"}],"abstract":[{"type":"text","text":"A layer representing a background."},{"type":"text","text":" "},{"type":"text","text":"Prefer using Background or BackgroundView over applying"},{"type":"text","text":" "},{"type":"text","text":"adhoc background changes to container views."},{"type":"text","text":" "},{"type":"text","text":"See also SnapshotBackground for use in lists."},{"type":"text","text":" "},{"type":"text","text":"Backgrounds are generally the “first sibling” to whatever"},{"type":"text","text":" "},{"type":"text","text":"it is providing a background for and would rarely have"},{"type":"text","text":" "},{"type":"text","text":"children (except for custom backgrounds)."},{"type":"text","text":" "},{"type":"text","text":"Backgrounds have a specific construction, for example:"},{"type":"text","text":" "},{"type":"text","text":"Where parent is a layer, the background is sent to back,"},{"type":"text","text":" "},{"type":"text","text":"it is stretched to fit it’s parent (or including “outset”"},{"type":"text","text":" "},{"type":"text","text":"if specified on creation), it masks content to it’s bounds"},{"type":"text","text":" "},{"type":"text","text":"(unless overridden) and it inherits ancestor corner radius."},{"type":"text","text":" "},{"type":"text","text":"When Background is used in conjunction with “in()”,"},{"type":"text","text":" "},{"type":"text","text":"a focussed API is provided to background mutations,"},{"type":"text","text":" "},{"type":"text","text":"include full Theme support."},{"type":"text","text":" "},{"type":"text","text":"For more complex Backgrounds, including multilayer"},{"type":"text","text":" "},{"type":"text","text":"Backgrounds and layering effects, use make{} or build{}"},{"type":"text","text":" "},{"type":"text","text":"on the Background instance to add hierarchy,"},{"type":"text","text":" "},{"type":"text","text":"or use the convenience API add{} and addLayer{}."}],"identifier":"doc:\/\/com.davidbjames.C3\/documentation\/C3\/Background","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"Background"}],"url":"\/documentation\/c3\/background"}}}